[
  // Global
  // Fuzzy file search (like <C-p> in Neovim)
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "editorTextFocus && neovim.mode == normal"
  },
  // Open file explorer (like <C-e> for NvimTree)
  {
    "key": "ctrl+e",
    "command": "workbench.view.explorer",
    "when": "neovim.mode == normal"
  },
  // Toggle terminal (not in your init.lua, but often useful)
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "neovim.mode == normal"
  },
  // Search
  {
    "key": "ctrl+f",
    "command": "workbench.action.findInFiles",
    "when": "editorTextFocus && neovim.mode != insert"
  },
  {
    "key": "cmd+i",
    "command": "composerMode.agent",
  },
  // Editor
  {
    "key": "ctrl+u",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "cursorMove",
          "args": {
            "to": "viewPortTop"
          }
        },
        {
          "command": "editorScroll",
          "args": {
            "to": "up",
            "by": "halfPage"
          }
        }
      ]
    }
  },
  {
    "key": "ctrl+d",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "cursorMove",
          "args": {
            "to": "viewPortBottom"
          }
        },
        {
          "command": "editorScroll",
          "args": {
            "to": "down",
            "by": "halfPage"
          }
        }
      ]
    }
  },
  // Navigations
  {
    "key": "shift+l",
    "command": "workbench.action.nextEditor",
    "when": "neovim.mode == normal && editorFocus"
  },
  {
    "key": "shift+h",
    "command": "workbench.action.previousEditor",
    "when": "neovim.mode == normal && editorFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "neovim.mode != insert"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "neovim.mode != insert"
  },
  {
    "command": "workbench.action.navigateDown",
    "key": "ctrl+j",
    "when": "neovim.mode != insert"
  },
  {
    "command": "workbench.action.navigateUp",
    "key": "ctrl+k",
    "when": "neovim.mode != insert"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+j",
    "command": "list.focusAnyDown",
    "when": "listFocus"
  },
  {
    "key": "ctrl+k",
    "command": "list.focusAnyUp",
    "when": "listFocus"
  },
  // Panel
  {
    "key": "shift+l",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  {
    "key": "shift+h",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closePanel",
    "when": "panelFocus"
  },
  // Side Bar
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletFocus"
  },
  {
    "key": "shift+j",
    "command": "workbench.action.nextSideBarView",
    "when": "sideBarFocus"
  },
  {
    "key": "shift+k",
    "command": "workbench.action.previousSideBarView",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+f",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "sideBarFocus"
  },
  {
    "key": "ctrl+j",
    "command": "search.action.focusNextSearchResult",
    "when": "searchViewletVisible"
  },
  {
    "key": "ctrl+k",
    "command": "search.action.focusPreviousSearchResult",
    "when": "searchViewletVisible"
  },
]